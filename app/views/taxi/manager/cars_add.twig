{% extends "manager/global.html.twig" %}
{% block content %}

    <div class="form">
        <div class="fields">
            <div class="line">
                <div class="label required">
                    Название:
                </div>
                <div class="value">
                    <input name="car_title" class="element required translit_from" type="text"  maxlength="250"  value="{{ info.car_title }}">
                </div>
            </div>
            <div class="line">
                <div class="label required">
                    Класс:
                </div>
                <div  class="element">
                    <label>
                        <select class="element" name="car_class">
                            {% for class in classes %}
                                <option value="{{ class.class_id }}" {% if info.car_class==class.class_id %}selected="selected"{% endif %}>{{ class.class_title }}</option>
                            {% endfor %}
                        </select>
                    </label>
                </div>
            </div>
            <div class="line">
                <div class="label required">
                    Мощность (л\с):
                </div>
                <div class="value">
                    <input name="car_power" class="element required " type="text"  maxlength="250"  value="{{ info.car_power }}">
                </div>
            </div>
            <div class="line">
                <div class="label">
                    Фото:
                </div>
                <div class="value">

                    {% set image_data=image_data1 %}
                    {% include 'files/upload_image.html.twig' %}
                </div>
            </div>

            <div class="line">
                <div class="label required">
                    Возможность аренды этого авто:
                </div>
                <div class="value">
                    <select name="car_rent" class="element" >
                        <option value="0" {% if( not info.car_rent)%} selected {% endif%} >Нет аренды</option>
                        <option value="1" {% if(info.car_rent)%} selected {% endif%} >Сдается в аренду</option>
                    </select>
                </div>
            </div>

            {% if edit==1 %}
                <input type="hidden" class="element" name="action" value="process_edit">
                <input type="hidden" class="element" name="car_id" value="{{ info.car_id }}">
            {% else %}
                <input type="hidden" class="element" name="action" value="process_add">
            {% endif %}
        </div>
        <div class="submit btn btn-primary">
            {% if edit==1 %}
                Сохранить
            {% else %}
                Добавить
            {% endif %}
        </div>
    </div>
{% endblock %}
