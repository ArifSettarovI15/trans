{% extends "manager/global.html.twig" %}
{% block content %}

    <div class="form">
        <div class="fields">
            <div class="line">
                <div class="label required">
                    Название:
                </div>
                <div class="value">
                    <input name="car_title" class="element required translit_from" type="text"  maxlength="250"  value="{{ info.article_title }}">
                </div>
            </div>
            <div class="line">
                <div class="label required">
                    Категория:
                </div>
                <div  class="element">
                    <label>
                        <select class="element" name="car_class">
                            {% for category in categories %}
                                <option value="{{ category.category_id }}" >{{ category.category_title }}</option>
                            {% endfor %}
                        </select>
                    </label>
                </div>
            </div>
            <div class="line">
                <div class="label required">
                    Текст статьи:
                </div>
                <div class="value">
                    <input name="car_power" class="element required " type="text"  maxlength="250"  value="{{ info.car_power }}">
                </div>
            </div>
            <div class="line">
                <div class="label">
                    Изображение:
                </div>
                <div class="value">

                    {% set image_data=image_data1 %}
                    {% include 'files/upload_image.html.twig' %}
                </div>
            </div>



            {% if edit==1 %}
                <input type="hidden" class="element" name="action" value="process_edit">
                <input type="hidden" class="element" name="car_id" value="{{ info.car_id }}">
            {% else %}
                <input type="hidden" class="element" name="action" value="process_add">
            {% endif %}
        </div>
        <div class="submit btn btn-primary">
            {% if edit==1 %}
                Сохранить
            {% else %}
                Добавить
            {% endif %}
        </div>
    </div>
{% endblock %}
