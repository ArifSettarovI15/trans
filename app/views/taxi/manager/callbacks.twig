{% extends "manager/global.html.twig" %}
{% block content %}
    {%  set classes  = variables['classes'] %}

    <div class="actions">
        <a class="btn btn-primary" href="{{ global.base_url }}/manager/taxi/callbacks/add/">Добавить</a>
    </div>

    <div class="table_data">
        <div class="table_data_navigation">
            {% include 'parts/paging.html.twig' %}
        </div>
        <table class="table_bordered table_striped">
            <thead>
            <tr>
                <th style="width: 100px">ID</th>
                <th style="width: 100px">Статус</th>
                <th style="width: 100px">Имя</th>
                <th style="width: 200px">Телефон</th>
                <th style="width: 150px">Время</th>

            </tr>
            <tr>
                <th><input data-name="callback_id" data-type="filter_value" min="0" type="text"></th>
                <th><select data-name="callback_status" data-type="filter_value">
                        <option value="">Все</option>
                        <option value="0">Не просмотренные</option>
                        <option value="1">Просмотренные</option>
                    </select></th>
                <th><input data-name="callback_name" data-type="filter_value" min="0" type="text"></th>
                <th style="width: 200px;"><input data-name="callback_phone" data-type="filter_value" min="0" type="text"></th>
                <th><input data-name="callback_time" data-type="filter_value" min="0" type="text"></th>

            </tr>
            </thead>
            <tbody class="table_content">
            {% include 'taxi/manager/callbacks_table.twig' %}
            </tbody>
        </table>
    </div>
{% endblock %}
