

{% for item in list %}
    <tr data-id="{{ item.route_id }}">
        <td class="data_id">{{ item.route_id }}</td>
        <td>
            <div class="object_status  {% if item.route_status!=1%}no{% else %}yes{% endif %}" data-value="{{ item.route_id }}">
                <span class="badge badge-danger">нет</span>
                <span class="badge badge-success">да</span>
            </div>
        </td>
        <td>{{ item.from_city_title }}</td>
        <td>{{ item.to_city_title }}</td>
        <td>
            <a target="_blank" class="btn btn-success btn-xs" href="{{ global.base_url }}/prices/{{ item.from_city_url }}/{{ item.to_city_url }}/"><i class="fa fa-external-link" aria-hidden="true"></i></a>
            <a target="_blank" href="{{ global.base_url }}/manager/taxi/routes/edit/{{ item.route_id  }}/" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
        </td>
    </tr>
{% endfor %}
