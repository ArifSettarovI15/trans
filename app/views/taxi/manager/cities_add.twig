{% extends "manager/global.html.twig" %}
{% block content %}
    <div class="form">
        <div class="fields">
            <div class="line">
                <div class="label required">
                    Название:
                </div>
                <div class="value">
                    <input name="city_title" class="element required translit_from" type="text"  maxlength="250"  value="{{ info.city_title }}">
                </div>
            </div>
            <div class="line">
                <div class="label required">
                    Синонимы:
                </div>
                <div class="value">
                    <input name="city_aliases" class="element" type="text"  maxlength="250"  value="{{ info.city_aliases }}">
                </div>
            </div>
            <div class="line">
                <div class="label required">
                    URL:
                </div>
                <div class="value">
                    <input name="city_url" class="element required translit_to" type="text"  maxlength="250"  value="{{ info.city_url }}">
                </div>
            </div>
            <div class="line">
                <div class="label">
                    Иконка:
                </div>
                <div class="value">
                    {% set image_data=image_data1 %}
                    {% include 'files/upload_image.html.twig' %}
                </div>
            </div>

            <div class="line">
                <div class="label required">
                    Координаты:
                </div>
                <div class="value">
                    <input name="city_coor" class="element required" type="text"  maxlength="250"  value="{{ info.city_coor }}">
                </div>
            </div>
            <div class="line">
                <div class="label required">
                    Тип:
                </div>
                <div class="value">
                    <select name="city_type" class="element" >
                        <option value="1" {% if info.city_type==1 %} selected{% endif %}>Город</option>
                        <option value="2" {% if info.city_type==2 %} selected{% endif %}>Гостиница</option>
                        <option value="3"{% if info.city_type==3 %} selected{% endif %}>Место</option>
                    </select>

                </div>
            </div>

            {% if edit==1 %}
                <input type="hidden" class="element" name="action" value="process_edit">
                <input type="hidden" class="element" name="city_id" value="{{ info.city_id }}">
            {% else %}
                <input type="hidden" class="element" name="action" value="process_add">
            {% endif %}
        </div>
        <div class="submit btn btn-primary">
            {% if edit==1 %}
                Сохранить
            {% else %}
                Добавить
            {% endif %}
        </div>
    </div>
{% endblock %}
