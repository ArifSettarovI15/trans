{% for item in categories %}

    <tr data-id="{{ item.art_cat_id }}">
        <td style="width: 200px" class="data_id">{{ item.art_cat_id }}</td>

        <td  style="width: 200px">{{ item.art_cat_title }}</td>
        <td  style="width: 200px">{{ item.art_cat_alias}}</td>

        <td>

            <a target="_blank" href="{{ global.base_url }}/manager/taxi/categories/edit/{{ item.art_cat_id  }}/" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
            <div data-value="{{ item.art_cat_id }}" class="btn btn-danger btn-xs delete"><i class="fa"></i></div>

        </td>
    </tr>
{% endfor %}
