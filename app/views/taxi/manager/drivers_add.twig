{% extends "manager/global.html.twig" %}
{% block content %}

    <div class="form">
        <div class="fields">
            <div class="line">
                <div class="label required">
                    ФИО водителя:
                </div>
                <div class="value">
                    <input name="driver_name" class="element required translit_from" type="text"  maxlength="250"  value="{{ info.driver_name }}">
                </div>
            </div>
            <div class="line">
                <div class="label">
                    Телефон:
                </div>
                <div class="value">
                    <input name="driver_phone" class="element required" type="text"  maxlength="250"  value="{{ info.driver_phone }}">
                </div>
            </div>

            <div class="line">
                <div class="label required">
                    Автомобиль:
                </div>
                <div class="value">
                    <select name="driver_car_id" class="element">
                        {% for car in cars %}
                            <option value="{{ car.car_id }}"{% if car.car_id == info.driver_car_id %} selected {% endif %}>{{ car.car_title }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="line">
                <div class="label required">
                    Водительское удостоверение:
                </div>
                <div class="value">
                    <input name="driver_license" class="element required" type="text"  maxlength="250"  value="{{ info.driver_data.driver_license }}">
                </div>
            </div>
            <div class="line">
                <div class="label required">
                    Адрес:
                </div>
                <div class="value">
                    <input name="driver_address" class="element required" type="text"  maxlength="250"  value="{{ info.driver_data.driver_address}}">
                </div>
            </div>
            <div class="line">
                <div class="label required">
                    Дата рождения:
                </div>
                <div class="value">
                    <input name="driver_birthday" class="element required" type="text"  maxlength="250"  value="{{ info.driver_data.driver_birthday }}">
                </div>
            </div>

            {% if edit==1 %}
                <input type="hidden" class="element" name="action" value="process_edit">
                <input type="hidden" class="element" name="driver_id" value="{{ info.driver_id }}">
            {% else %}
                <input type="hidden" class="element" name="action" value="process_add">
            {% endif %}
        </div>
        <div class="submit btn btn-primary">
            {% if edit==1 %}
                Сохранить
            {% else %}
                Добавить
            {% endif %}
        </div>
    </div>
{% endblock %}
