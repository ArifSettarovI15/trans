{% extends "manager/global.html.twig" %}
{% block content %}
    {%  set classes  = variables['classes'] %}

    <div class="actions">
        <a class="btn btn-primary" href="{{ global.base_url }}/manager/taxi/cars/add/">Добавить</a>
    </div>

    <div class="table_data">
        <div class="table_data_navigation">
            {% include 'parts/paging.html.twig' %}
        </div>
        <table class="table_bordered table_striped">
            <thead>
            <tr>
                <th style="width: 100px">ID</th>
                <th style="width: 100px">
                    Мощность
                </th>
                <th style="width: 200px">Фото</th>
                <th style="width: 150px">Класс</th>
                <th style="width: 200px;">Название</th>
                <th style="width: 100px;">Возм. аренды</th>

                <th class="action_button_3"></th>
            </tr>
            <tr>
                <th><input data-name="car_id" data-type="filter_value" min="0" type="text"></th>
                <th></th>
                <th style="width: 200px;"></th>
                <th>
                    <select data-name="car_class" data-type="filter_value">
                        <option value="">Все</option>
                        {% for item in classes %}
                            <option value="{{ item.class_id }}" {% if variables.car_class==item.class_id %}selected="selected"{% endif %}>
                                {{ item.class_title }}</option>
                        {% endfor %}
                    </select>
                </th>
                <th><input data-name="city_title" data-type="filter_value" type="text"></th>
                <th></th>

                <th class="action_button"></th>
            </tr>
            </thead>
            <tbody class="table_content">
            {% include 'taxi/manager/cars_table.twig' %}
            </tbody>
        </table>
    </div>
{% endblock %}
