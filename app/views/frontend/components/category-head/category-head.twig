{% import "frontend/elements/svg/svg_macros.twig" as Svg %}
<div class="category-head">
    {% if global.header.header_image_url%}
        {% set header_image = global.header_images[global.header.header_image_url] %}
    {% endif %}
    {% if header_image %}
        <div class="category-head__img" style="background-image: url({{ header_image.file_url }})"></div>
    {% else %}
        <div class="category-head__img" style="background-image: url('/assets/images/static/tarif-bc.png')"></div>
    {% endif %}

    <div class="container">
        <div class="category-head__wrapper">
            <div class="category-head__back">
                <a href="{{ global.page.back_url }}" class="link">
                    <span class="link__icon">{{ Svg.icon('arrow-left', 1) }}</span>
                    <span class="link__text">Назад</span>
                </a>
            </div>
            {% if global.page.breadcrumbs %}
            <div class="category-head__breadcrumbs">
                {% include 'frontend/components/breadcrumbs/breadcrumbs.twig' %}
            </div>
            {% endif %}
            <div class="category-head__main">
                {% if global.page.title %}
                    <h1 class="category-head__title">{{ global.page.title }}</h1>
                {% endif %}
            </div>
        </div>
    </div>
</div>
