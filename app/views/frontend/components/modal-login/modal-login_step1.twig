{% import 'frontend/elements/svg/svg_macros.twig' as Svg %}
{% import 'frontend/elements/input/input_macro.twig' as Input %}
<div id="modal_login" class="modal white-popup animated fast">
    <div class="modal__wrapper">
        <div class="modal__head">
            <div class="modal__title">Войти в кабинет</div>
            <div class="modal__close">
                <div class="btn btn_xxs js-modal-close">
                    <div class="btn__icon">{{ Svg.icon('close', 1) }}</div>
                </div>
            </div>
        </div>
        <div class="modal__body">
            <div class="modal__form form" data-url="{{ global.base_url }}/login/" data-callback="ShowThx">
                <input type="hidden" class="element" name="action" value="process_confirm">
                <input type="hidden" class="element" name="phone" value="{{ phone }}">

                <div class="modal__form-item">
                    {{ Input.field('number', {
                        label: 'Код из смс',
                        required: 1
                    }) }}
                </div>
                <div class="modal__form-item">
                    <div class="button button_md button_primary submit">
                        <div class="button__text">Подтвердить</div>
                    </div>
                </div>
                <div class="modal__form-item">
                    <div class="button button_md button_outline_1 submit-code">
                        <div class="button__text">повторить код смс</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>