<div class="steps">
  <div class="steps__list">
    {% set i = 1 %}
    {% for item in steps %}
    <div class="steps__item">
      <div class="step">
        <div class="step__top">
          <div class="step__img">
            <picture>
              <img src="{{ item.mainpage_steps_image.sizes_url.medium }}" alt="">
            </picture>
          </div>
          <div class="step__counter">
            <div class="step__counter-inner">
              <span>{{ i }}</span>
            </div>
          </div>
        </div>
        <div class="step__content">
          <div class="step__title">{{item.mainpage_steps_title}}</div>
          <div class="step__descr">{{item.mainpage_steps_description}}</div>
        </div>
      </div>
    </div>
      {%  set i = i+1 %}
    {% endfor %}
  </div>
</div>