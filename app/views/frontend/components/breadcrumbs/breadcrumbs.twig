{% if global.page.breadcrumbs %}
    <section class="breadcrumbs">
        <div class=" breadcrumbs__wrapper">
            <ul class="breadcrumbs__list" itemscope itemtype="https://schema.org/BreadcrumbList">
                <li class="breadcrumbs__item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <a class="breadcrumbs__link" itemprop="item" href="{{ global.base_url }}">
                        <span itemprop="name">Главная</span>
                        <meta itemprop="position" content="1">
                    </a>
                    <span class="breadcrumbs__line">/</span>
                </li>
                {% set b_pos=2 %}
                {% for item in global.page.breadcrumbs %}
                    <li class="breadcrumbs__item {% if b_pos==global.page.breadcrumbs|length+1 %}breadcrumbs__item_active{% endif %}" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                        {% if item.link %}
                            <a class="breadcrumbs__link" itemscope itemtype="https://schema.org/WebPage"
                               itemprop="item" href="{{ item.link }}" itemid="{{ item.link }}">
                                <span itemprop="name">{{ item.title }}</span>
                            </a>
                        {% else %}
                            <span class="breadcrumbs__span" itemprop="name">{{ item.title }}</span>
                        {% endif %}
                        <meta itemprop="position" content="{{ b_pos }}">
                        {% set b_pos=b_pos+1 %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </section>
{% endif %}