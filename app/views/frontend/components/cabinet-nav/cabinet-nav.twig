        </div>
        <div class="tabs__item">
          <a href="{{ global.base_url }}/cabinet/sale/" class="tabs__link no-js {% if global.header.keywords=="sale" %}tabs__link_active{% endif %}">
            <div class="tabs__icon">
              {{ Svg.icon('badge-icon', 1) }}
            </div>
            <div class="tabs__text">
              Скидки
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>