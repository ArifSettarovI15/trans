          <a href="{{ global.base_url }}/cabinet/" class="tabs__link no-js {% if global.header.keywords=="cabinet" %}tabs__link_active{% endif %}">
            <div class="tabs__icon">
              {{ Svg.icon('home', 1) }}
            </div>
            <div class="tabs__text">
              Главная
            </div>
          </a>
        </div>
        <div class="tabs__item">
          <a href="{{ global.base_url }}/cabinet/trips/" class="tabs__link no-js {% if global.header.keywords=="trips" %}tabs__link_active{% endif %}">
