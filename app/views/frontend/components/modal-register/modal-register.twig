{% import 'frontend/elements/svg/svg_macros.twig' as Svg %}
{% import 'frontend/elements/input/input_macro.twig' as Input %}
<div id="modal_reg" class="modal modal_reg mfp-hide white-popup animated fast">
    <div class="modal__wrapper">
        <div class="modal__head">
            <div class="modal__title">Регистрация</div>
            <div class="modal__close">
                <div class="btn btn_xxs js-modal-close">
                    <div class="btn__icon">{{ Svg.icon('close', 1) }}</div>
                </div>
            </div>
        </div>
        <div class="modal__body">
            <div class="modal__form form" data-url="{{ global.base_url }}/login/" data-callback="ShowThx">
                <input type="hidden" class="element" name="action" value="process_register">
                <div class="modal__form-item">
                    <input type="hidden" name="acc_type" value="acc_typ_1">
                    <div class="label label_required">Тип аккаунта</div>
                    <div class="tabs tabs_2">
                        <div class="tabs__list">
                            <div class="tabs__item">
                                <div class="tabs__link tabs__link_active element" data-name="acc_type_1">Физ. лицо</div>
                            </div>
                            <div class="tabs__item">
                                <div class="tabs__link element" data-name="acc_type_2">Юр. лицо</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal__form-item">
                    {{ Input.field('name', {
                        label: 'Ваше имя',
                        required: 1,
                        parent_mod: '2'
                    }) }}
                </div>
                <div class="modal__form-item">
                    {{ Input.field('phone', {
                        label: 'Ваш телефон',
                        required: 1,
                        type: 'tel',
                        value: '+7',
                        parent_mod: '2'
                    }) }}
                </div>
                <div class="modal__form-item element" >
                    {% include 'frontend/components/toggler/toggler.twig' with {
                        name: 'policies',
                        label: 'Я принимаю <a target="_blank" href="'~ global.base_url ~ '/privacy.html">условия персональных данных</a> и <a target="_blank" href="'~ global.base_url ~ '/rules.html">правила сайта</a>'
                    } %}
                </div>
                <div class="modal__bottom">
                    <div class="modal__form-item">
                        <div class="button button_md button_primary submit">
                            <div class="button__text">зарегистрироваться</div>
                        </div>
                    </div>
                    <div class="modal__form-item">
                        <div class="button button_md button_outline_1 popup-open" data-mfp-src="#modal_login">
                            <div class="button__text">войти в кабинет</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
