{% import 'frontend/elements/svg/svg_macros.twig' as Svg %}
{% import 'frontend/elements/input/input_macro.twig' as Input %}
<div id="modal_call" class="modal mfp-hide white-popup animated fast">
    <div class="modal__wrapper">
        <div class="modal__head">
            <div class="modal__title">Перезвоните мне</div>
            <div class="modal__close">
                <div class="btn btn_xxs js-modal-close">
                    <div class="btn__icon">{{ Svg.icon('close', 1) }}</div>
                </div>
            </div>
        </div>
        <div class="modal__body">
            <div class="modal__form form" data-url="{{ global.base_url }}/callback/" data-callback="ShowThx">

                <input type="hidden" name="action" value="process_callback" class="element">

                <div class="modal__form-item">
                    {{ Input.field('name', {
                        label: 'Ваше имя',
                        required: 1
                    }) }}
                </div>
                <div class="modal__form-item">
                    {{ Input.field('phone', {
                        label: 'Ваш телефон',
                        required: 1,
                        type: 'tel',
                        value: '+7'
                    }) }}
                </div>
                <div class="modal__form-item">
                    <div class="button button_md button_primary submit">
                        <div class="button__text">отправить заявку</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
